{
  "name": "flobit-analytics",
  "version": "1.0.0",
  "private": true,
  "packageManager": "npm@10.2.4",
  "description": "Production-grade full-stack analytics application with AI-powered chat",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:push": "cd apps/api && npm run db:push",
    "db:seed": "cd apps/api && npm run db:seed",
    "db:studio": "cd apps/api && npm run db:studio"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
